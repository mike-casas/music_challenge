<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h1><%= @artist.name %></h1>
      <h3>Album(<%= @artist.albums.count %>)</h3>
      <% @artist.albums.each do |album| %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <img src="<%= album.image_url%>" alt=<%= album.name %>>
          <div class="caption">
            <h3><%= album.name %></h3>
            <p><%= album.released_at %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-md-4">
      <img src="<%= @artist.image_url%>" alt="<%= @artist.name%>">
    </div>
  </div>
</div>
